<h1>Payment Calculation</h1>

<form action="/payment/results">
    <div>
        <label for = "basis_points">
            APR    
        </label>
        
        <input id="basis_points" type="text" name="basis_points">
    </div>
    
    <div>
        <label for = "number_of_years">
            Number of years 
        </label>
        
        <input id="number_of_years" type="text" name="number_of_years">
    </div>
    
    <div>
        <label for = "present_value">
            Principal   
        </label>
        
        <input id="present_value" type="text" name="present_value">
    </div>
   
    <button label = "Calculate monthly payment"> Calculate monthly payment </button>
    
</form>
